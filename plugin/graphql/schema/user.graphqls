type User {
  id: ID!
  created: Time!
  updated: Time!

  first_name: String!
  last_name: String!
  email: String!
  password: String!

  is_admin: Boolean!
}

extend type Query {
  user(user_id: ID): User!
}

input UserInput {
  first_name: String!
  last_name: String!
  email: String!
  password: String!
}

extend type Mutation {
  registerUser(input: UserInput!): User!
}