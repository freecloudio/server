type Node {
	id: ID!
	created: Time!
	updated: Time!

	size: Int!
	mime_type: String!
	name: String!
	owner_id: ID!
	parent_node_id: ID
	type: NodeType!
	is_starred: Boolean!
	path: String!
	full_path: String!

	files: [Node!]
}

enum NodeType {
	FILE
	FOLDER
}

input GetNodeInput {
	id: ID
	full_path: String
}

extend type Query {
	node(input: GetNodeInput!): Node!
}